{
  "openapi": "3.0.3",
  "info": {
    "title": "Personal / Portfolio API",
    "description": "Backend API: health, status, login (JWT), public (skills, projects, posts), admin CRUD (CMS). Mengikuti [OpenAPI Specification 3.0](https://swagger.io/specification/).",
    "version": "1.0"
  },
  "servers": [
    { "url": "http://localhost:8081", "description": "Local" },
    { "url": "/", "description": "Relative (proxy)" }
  ],
  "tags": [
    { "name": "Public", "description": "Endpoint publik tanpa autentikasi" },
    { "name": "Admin", "description": "Endpoint admin (Bearer JWT dari POST /api/login)" }
  ],
  "paths": {
    "/api/health": {
      "get": {
        "operationId": "getHealth",
        "summary": "Health check",
        "tags": ["Public"],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": { "status": { "type": "string", "example": "ok" } }
                }
              }
            }
          }
        }
      }
    },
    "/api/status": {
      "get": {
        "operationId": "getStatus",
        "summary": "Uptime + status database",
        "tags": ["Public"],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": { "type": "string" },
                    "uptime_seconds": { "type": "integer" },
                    "database": { "type": "string", "enum": ["ok", "disabled", "error"] }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/login": {
      "post": {
        "operationId": "login",
        "summary": "Login admin â†’ JWT",
        "tags": ["Public"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["username", "password"],
                "properties": {
                  "username": { "type": "string" },
                  "password": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": { "token": { "type": "string" } }
                }
              }
            }
          },
          "400": { "description": "Invalid body" },
          "401": { "description": "Invalid credentials" },
          "503": { "description": "Login not configured" }
        }
      }
    },
    "/api/skills": {
      "get": {
        "operationId": "listSkills",
        "summary": "Daftar skills",
        "tags": ["Public"],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "skills": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": { "type": "integer" },
                          "category_id": { "type": "integer" },
                          "name": { "type": "string" },
                          "level": { "type": "string" },
                          "icon_url": { "type": "string", "nullable": true },
                          "category": { "type": "string" }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "503": { "description": "Database not configured" }
        }
      }
    },
    "/api/projects": {
      "get": {
        "operationId": "listProjects",
        "summary": "Daftar proyek",
        "tags": ["Public"],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": { "projects": { "type": "array", "items": { "type": "object" } } }
                }
              }
            }
          },
          "503": { "description": "Database not configured" }
        }
      }
    },
    "/api/projects/{slug}": {
      "get": {
        "operationId": "getProjectBySlug",
        "summary": "Detail proyek by slug",
        "tags": ["Public"],
        "parameters": [
          { "name": "slug", "in": "path", "required": true, "schema": { "type": "string" }, "description": "Slug proyek" }
        ],
        "responses": {
          "200": { "description": "OK" },
          "404": { "description": "Not found" }
        }
      }
    },
    "/api/posts": {
      "get": {
        "operationId": "listPosts",
        "summary": "Daftar post (published)",
        "tags": ["Public"],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": { "posts": { "type": "array", "items": { "type": "object" } } }
                }
              }
            }
          },
          "503": { "description": "Database not configured" }
        }
      }
    },
    "/api/posts/{slug}": {
      "get": {
        "operationId": "getPostBySlug",
        "summary": "Detail post by slug",
        "tags": ["Public"],
        "parameters": [
          { "name": "slug", "in": "path", "required": true, "schema": { "type": "string" }, "description": "Slug post" }
        ],
        "responses": {
          "200": { "description": "OK" },
          "404": { "description": "Not found" }
        }
      }
    },
    "/api/admin": {
      "get": {
        "operationId": "adminOverview",
        "summary": "Overview admin",
        "tags": ["Admin"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": { "message": { "type": "string" } }
                }
              }
            }
          },
          "401": { "description": "Unauthorized" }
        }
      }
    },
    "/api/admin/resources": {
      "get": {
        "operationId": "adminResources",
        "summary": "Schema resource CMS (list + form fields)",
        "tags": ["Admin"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": { "resources": { "type": "array" } }
                }
              }
            }
          }
        }
      }
    },
    "/api/admin/skill-categories": {
      "get": {
        "operationId": "listSkillCategories",
        "summary": "List kategori skill",
        "tags": ["Admin"],
        "security": [{ "bearerAuth": [] }],
        "responses": { "200": { "description": "OK" } }
      },
      "post": {
        "operationId": "createSkillCategory",
        "summary": "Create kategori",
        "tags": ["Admin"],
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "slug": { "type": "string" },
                  "sort_order": { "type": "integer" }
                }
              }
            }
          }
        },
        "responses": { "201": { "description": "Created" }, "400": { "description": "Bad request" } }
      },
      "put": {
        "operationId": "updateSkillCategory",
        "summary": "Update kategori",
        "tags": ["Admin"],
        "security": [{ "bearerAuth": [] }],
        "responses": { "200": { "description": "OK" }, "404": { "description": "Not found" } }
      },
      "delete": {
        "operationId": "deleteSkillCategory",
        "summary": "Delete kategori",
        "tags": ["Admin"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [{ "name": "id", "in": "query", "required": true, "schema": { "type": "integer" } }],
        "responses": { "200": { "description": "OK" }, "404": { "description": "Not found" } }
      }
    },
    "/api/admin/skills": {
      "get": {
        "operationId": "adminListSkills",
        "summary": "List skills",
        "tags": ["Admin"],
        "security": [{ "bearerAuth": [] }],
        "responses": { "200": { "description": "OK" } }
      },
      "post": {
        "operationId": "adminCreateSkill",
        "summary": "Create skill",
        "tags": ["Admin"],
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "category_id": { "type": "integer" },
                  "name": { "type": "string" },
                  "level": { "type": "string" },
                  "icon_url": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": { "201": { "description": "Created" } }
      },
      "put": {
        "operationId": "adminUpdateSkill",
        "summary": "Update skill",
        "tags": ["Admin"],
        "security": [{ "bearerAuth": [] }],
        "responses": { "200": { "description": "OK" }, "404": { "description": "Not found" } }
      },
      "delete": {
        "operationId": "adminDeleteSkill",
        "summary": "Delete skill",
        "tags": ["Admin"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [{ "name": "id", "in": "query", "required": true, "schema": { "type": "integer" } }],
        "responses": { "200": { "description": "OK" } }
      }
    },
    "/api/admin/tools": {
      "get": {
        "operationId": "adminListTools",
        "summary": "List tools",
        "tags": ["Admin"],
        "security": [{ "bearerAuth": [] }],
        "responses": { "200": { "description": "OK" } }
      },
      "post": {
        "operationId": "adminCreateTool",
        "summary": "Create tool",
        "tags": ["Admin"],
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "slug": { "type": "string" },
                  "logo_url": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": { "201": { "description": "Created" } }
      },
      "put": {
        "operationId": "adminUpdateTool",
        "summary": "Update tool",
        "tags": ["Admin"],
        "security": [{ "bearerAuth": [] }],
        "responses": { "200": { "description": "OK" } }
      },
      "delete": {
        "operationId": "adminDeleteTool",
        "summary": "Delete tool",
        "tags": ["Admin"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [{ "name": "id", "in": "query", "schema": { "type": "integer" } }],
        "responses": { "200": { "description": "OK" } }
      }
    },
    "/api/admin/tools/{id}": {
      "get": {
        "operationId": "adminGetTool",
        "summary": "Get tool by ID",
        "tags": ["Admin"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }],
        "responses": { "200": { "description": "OK" }, "404": { "description": "Not found" } }
      }
    },
    "/api/admin/tags": {
      "get": {
        "operationId": "adminListTags",
        "summary": "List tags",
        "tags": ["Admin"],
        "security": [{ "bearerAuth": [] }],
        "responses": { "200": { "description": "OK" } }
      },
      "post": {
        "operationId": "adminCreateTag",
        "summary": "Create tag",
        "tags": ["Admin"],
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "slug": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": { "201": { "description": "Created" } }
      },
      "put": {
        "operationId": "adminUpdateTag",
        "summary": "Update tag",
        "tags": ["Admin"],
        "security": [{ "bearerAuth": [] }],
        "responses": { "200": { "description": "OK" } }
      },
      "delete": {
        "operationId": "adminDeleteTag",
        "summary": "Delete tag",
        "tags": ["Admin"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [{ "name": "id", "in": "query", "schema": { "type": "integer" } }],
        "responses": { "200": { "description": "OK" } }
      }
    },
    "/api/admin/tags/{id}": {
      "get": {
        "operationId": "adminGetTag",
        "summary": "Get tag by ID",
        "tags": ["Admin"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }],
        "responses": { "200": { "description": "OK" }, "404": { "description": "Not found" } }
      }
    },
    "/api/admin/projects": {
      "get": {
        "operationId": "adminListProjects",
        "summary": "List projects",
        "tags": ["Admin"],
        "security": [{ "bearerAuth": [] }],
        "responses": { "200": { "description": "OK" } }
      },
      "post": {
        "operationId": "adminCreateProject",
        "summary": "Create project",
        "tags": ["Admin"],
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": { "type": "string" },
                  "slug": { "type": "string" },
                  "role": { "type": "string" },
                  "problem": { "type": "string" },
                  "solution": { "type": "string" },
                  "result": { "type": "string" },
                  "diagram_url": { "type": "string" },
                  "is_featured": { "type": "boolean" },
                  "tool_ids": { "type": "array", "items": { "type": "integer" } }
                }
              }
            }
          }
        },
        "responses": { "201": { "description": "Created" } }
      },
      "put": {
        "operationId": "adminUpdateProject",
        "summary": "Update project",
        "tags": ["Admin"],
        "security": [{ "bearerAuth": [] }],
        "responses": { "200": { "description": "OK" } }
      },
      "delete": {
        "operationId": "adminDeleteProject",
        "summary": "Delete project",
        "tags": ["Admin"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [{ "name": "id", "in": "query", "schema": { "type": "integer" } }],
        "responses": { "200": { "description": "OK" } }
      }
    },
    "/api/admin/projects/{id}": {
      "get": {
        "operationId": "adminGetProject",
        "summary": "Get project by ID",
        "tags": ["Admin"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }],
        "responses": { "200": { "description": "OK" }, "404": { "description": "Not found" } }
      }
    },
    "/api/admin/posts": {
      "get": {
        "operationId": "adminListPosts",
        "summary": "List posts",
        "tags": ["Admin"],
        "security": [{ "bearerAuth": [] }],
        "responses": { "200": { "description": "OK" } }
      },
      "post": {
        "operationId": "adminCreatePost",
        "summary": "Create post",
        "tags": ["Admin"],
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": { "type": "string" },
                  "slug": { "type": "string" },
                  "content": { "type": "string" },
                  "type": { "type": "string" },
                  "status": { "type": "string" },
                  "published_at": { "type": "string", "format": "date" },
                  "tag_ids": { "type": "array", "items": { "type": "integer" } }
                }
              }
            }
          }
        },
        "responses": { "201": { "description": "Created" } }
      },
      "put": {
        "operationId": "adminUpdatePost",
        "summary": "Update post",
        "tags": ["Admin"],
        "security": [{ "bearerAuth": [] }],
        "responses": { "200": { "description": "OK" } }
      },
      "delete": {
        "operationId": "adminDeletePost",
        "summary": "Delete post",
        "tags": ["Admin"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [{ "name": "id", "in": "query", "schema": { "type": "integer" } }],
        "responses": { "200": { "description": "OK" } }
      }
    },
    "/api/admin/posts/{id}": {
      "get": {
        "operationId": "adminGetPost",
        "summary": "Get post by ID",
        "tags": ["Admin"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }],
        "responses": { "200": { "description": "OK" }, "404": { "description": "Not found" } }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "Token dari POST /api/login"
      }
    }
  }
}
